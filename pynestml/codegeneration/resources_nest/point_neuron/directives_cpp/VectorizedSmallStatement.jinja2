{#
  Generates a single small statement into equivalent C++ syntax. The only difference to SmallStatement.jinja2 is the
  replacement of the return statement.
  @param stmt ASTSmallStmt
#}
{%- if tracing %}/* generated by {{self._TemplateReference__context.name}} */ {% endif %}
{%- if stmt.is_assignment() %}
{%- with ast = stmt.get_assignment() %}
{%- include "directives_cpp/VectorizedAssignment.jinja2" %}
{%- endwith %}
{%- elif stmt.is_function_call() %}
{%- with ast = stmt.get_function_call() %}
{%- include "directives_cpp/VectorizedFunctionCall.jinja2" %}
{%- endwith %}
{%- elif stmt.is_return_stmt() %}
{%- with ast = stmt.get_return_stmt() %}
{%- include "directives_cpp/VectorizedReturnStatement.jinja2" %}
{%- endwith %}
{%- endif %}
