"""
Model for testing the integrate_odes() function.
"""
neuron integrate_odes_test:
  state:
    test_1 real = 0.
    test_2 real = 0.
    r integer = 0
  end

  equations:
    test_1' = -test_1 / (100 ms)
    test_2' = -test_2 / (10 ms)
  end

  update:
    r += 1
    if r % 64 == 0:
      test_1 += 1
      test_2 += 1
    end

    integrate_odes(test_1)
    if test_1 > 3 and test_1 < 8:
      integrate_odes(test_2)
    end
  end
end
