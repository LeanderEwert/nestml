synapse SynapseEventSequenceTest:
  state:
    a real = 0.
    b real = 0.
    c real = 0.
    d real = 0.
  end

  input:
    pre_spikes real <- spike
    post_spikes real <- spike
  end

  @sequence=1
  onEvent(pre_spikes):
    tr += 1
  end

  @sequence=2
  onEvent(post_spikes):
    a += tr
  end

  @sequence=3
  onEvent(pre_spikes):
    b += a
    tr += 3.14159265358979323846
    c += tr
  end

  @sequence=4
  onEvent(post_spikes):
    d += c
  end
end
